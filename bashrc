alias yakko='ssh dickweed@ccowmu.org'
alias mkdir='mkdir -p'
alias ..='cd ..'
alias pyserver='python -m SimpleHTTPServer'
alias bashrc='vim ~/.bashrc'
alias la='ls -all'
alias mountsite='sshfs wmuwatersports@m01.mnet.so:/sites/wmuwatersports.org /media/wmuwatersports.org/'
alias thins='rvmsudo thin start -c ~/RailsApps/personal/ -p 80'
alias wat='man'
alias skynet='ssh danny@skynet.dyladan.me'

